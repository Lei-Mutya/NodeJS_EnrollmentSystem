<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/style.css' />
    <!-- Bootstrap core CSS -->
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
      crossorigin='anonymous'
    />
    <link
      rel='stylesheet'
      type='text/css'
      href='fonts/font-awesome/font-awesome.min.css'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css'
    />

    <title>MY FIRST NODE JS ACTIVITY</title>
  </head>
  <body>
    <nav id='home' class='navbar bg-dark navbar-expand-lg py-3 mb-4 fixed-top'>
      <div class='container'>
        <h4 class='textAll'><span class='me-3'><i
              class='bi bi-house-door-fill'
            ></i></span>EDUCasyon</h4>
        <button
          class='navbar-toggler text-light'
          type='button'
          data-bs-toggle='collapse'
          data-bs-target='#navmenu'
        >
          <span class='navbar-toggler-icon'><i class='bi bi-list'></i> </span>
        </button>

        <div class='collapse navbar-collapse bg-dark' id='navmenu'>
          <ul class='navbar-nav ms-auto'>
            <li class='nav-item'>
              <a href='/' class='nav-link'>HOME</a>
            </li>
            <li class='nav-item'>
              <a href='/loginStudent' class='nav-link'>STUDENT LOG-IN</a>
            </li>
            <li class='nav-item'>
              <a href='/loginAdmin' class='nav-link'>ADMIN MODULE</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <section class='p-3 p-lg-0 pt-lg-5 mt-5'>
      {{#if message}}
        <h4 class='alert alert-danger mt-4'>{{message}}</h4>
      {{/if}}
      <div class='container mt-5'>
        <div class='card'>
          <div class='card-header fw-bold'>
            <h3>ADMIN LOG-IN</h3>
            <h5>This is a restricted area, for IT admin only</h5>
          </div>
          <div class='card-body'>
            <form action='/auth/loginAdmin' method='POST'>
              <div class='form-group'>
                <label>Username:</label>
                <input
                  type='text'
                  class='form-control'
                  name='usernameAd'
                  id='usernameAd'
                />
              </div>
              <div class='form-group'>
                <label>Password:</label>
                <input
                  type='password'
                  class='form-control'
                  name='password_ad'
                  id='password_ad'
                />
                <small class='form-text text-muted'>Min. of 8 mixed alphanumeric
                  and special characters</small>
              </div>
              <div
                class='d-flex justify-content-md-end justify-content-sm-center'
              >
                <button type='submit' class='btn btn-primary'>LOG-IN</button>
              </div>

            </form>
          </div>
        </div>
      </div>

    </section>

    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj'
      crossorigin='anonymous'
    ></script>
  </body>
</html>